<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvReceiptTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingTop="@dimen/dp20"
            android:paddingBottom="@dimen/dp20"
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10"
            android:text="Select Receipt from.."
            android:textSize="@dimen/sp20"
            android:textColor="@color/colorWhite"
            app:fontFamily="@font/font_fake_receipt"
            tools:showIn="@layout/activity_receipt_list"
            />



        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnRecent"
            android:layout_width="match_parent"
            app:fontFamily="@font/font_fake_receipt"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp16"
            android:text="@string/recent"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_thin_oval_white"
            />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp16"
            app:fontFamily="@font/font_fake_receipt"
            android:text="@string/camera"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_thin_oval_white"
            />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontFamily="@font/font_fake_receipt"
            android:textSize="@dimen/sp16"
            android:text="@string/gallery"/>

    </LinearLayout>
</layout>