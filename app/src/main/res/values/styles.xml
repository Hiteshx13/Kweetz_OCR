<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyleEditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingStart">@dimen/dp10</item>
        <item name="android:paddingEnd">@dimen/dp10</item>
        <item name="android:paddingTop">@dimen/dp5</item>
        <item name="android:background">@drawable/shape_border_black</item>
        <item name="android:paddingBottom">@dimen/dp5</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="StyleEditTextMultiLine">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingStart">@dimen/dp10</item>
        <item name="android:paddingEnd">@dimen/dp10</item>
        <item name="android:paddingTop">@dimen/dp5</item>
        <item name="android:background">@drawable/shape_border_black</item>
        <item name="android:paddingBottom">@dimen/dp5</item>
    </style>

    <style name="StyleReceiptText">
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="fontFamily">@font/font_fake_receipt</item>
    </style>
</resources>
